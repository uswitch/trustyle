{
  "lerna": "3.16.4",
  "packages": [
    "src/compounds/**/*",
    "src/elements/**/*",
    "src/styles/",
    "src/layout/**/*",
    "src/themes/**/*",
    "src/helpers/**/*"
  ],
  "version": "independent",
  "ignoreChanges": [
    "**/package-lock.json",
    "**/*.stories.tsx",
    "**/stories.tsx",
    "**/.npmrc"
  ],
  "command": {
    "changed": {
      "includeMergedTags": true
    },
    "publish": {
      "includeMergedTags": true
    }
  }
}
