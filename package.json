{
  "name": "@uswitch/trustyle-lib",
  "version": "0.0.6",
  "license": "MIT",
  "scripts": {
    "--------------- TESTING": "-----------------------",
    "test": "jest",
    "test:jest": "jest",
    "test:schema": "node --experimental-modules scripts/validate-themes.mjs theme.schema.json src/themes/*/theme.json",
    "save-changed": "lerna changed --json > .storybook/changed.json",
    "snapshot:changed": "npm run save-changed && STORYBOOK_ONLY_CHANGED=true build-storybook --quiet && percy-storybook --widths=320,1280",
    "snapshot": "build-storybook --quiet && percy-storybook --widths=320,1280",
    "--------------- RUNNING": "-----------------------",
    "start": "npm run storybook",
    "typescript:check": "tsc --noEmit",
    "typescript:watch": "tsc --noEmit --watch",
    "storybook": "start-storybook -p 6006",
    "--------------- BUILDING": "----------------------",
    "build-storybook": "build-storybook",
    "--------------- LINTING": "-----------------------",
    "lint:fix": "npm run typescript:check && npm run prettier:fix && npm run eslint:fix",
    "lint:check": "npm run typescript:check && npm run prettier:check && npm run eslint:check",
    "eslint:check": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 1",
    "eslint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "prettier:fix": "prettier --check --write 'src/**/*.{ts,tsx}'",
    "--------------- DEPLOYING": "-----------------------",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@emotion/core": "^10.0.27",
    "@mdx-js/react": "^1.5.3",
    "@percy/storybook": "^3.2.0",
    "@storybook/addon-a11y": "^5.3.8",
    "@storybook/addon-actions": "^5.3.8",
    "@storybook/addon-info": "^5.3.8",
    "@storybook/addon-knobs": "^5.3.8",
    "@storybook/addon-links": "^5.3.8",
    "@storybook/addon-options": "^5.3.8",
    "@storybook/addon-storyshots": "^5.3.8",
    "@storybook/addon-viewport": "^5.3.8",
    "@storybook/addons": "^5.3.8",
    "@storybook/react": "^5.3.8",
    "@types/facepaint": "^1.2.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/react": "^16.8.21",
    "@types/react-dom": "^16.8.4",
    "@types/react-imgix": "^9.0.2",
    "@types/react-input-mask": "^2.0.3",
    "@types/react-transition-group": "^2.9.2",
    "@types/styled-system": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^2.17.0",
    "ajv": "^6.12.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-require-context-hook": "^1.0.0",
    "better-ajv-errors": "^0.6.7",
    "csstype": "^2.6.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-jsx": "^6.0.2",
    "eslint-plugin-flowtype": "^3.10.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^4.2.1",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^10.0.3",
    "prettier": "^1.19.1",
    "react": "^16.8.6",
    "react-imgix": "^8.6.1",
    "react-test-renderer": "^16.8.6",
    "theme-ui": "^0.2.52",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@styled-system/css": "^5.1.5",
    "@types/styled-system__css": "^5.0.5",
    "@types/theme-ui": "file:types/theme-ui",
    "styled-system": "^5.1.5"
  }
}
