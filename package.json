    "puppeteer": "^4.0.1",
    "react": "^16.8.6",
    "react-imgix": "^8.6.1",
    "react-test-renderer": "^16.8.6",
    "semantic-release": "^17.1.1",
    "styled-system": "^5.1.5",
    "svg-sprite-loader": "^5.0.0",
    "svg-transform-loader": "^2.0.13",
    "svgo-loader": "^2.2.1",
    "theme-ui": "^0.9.1",
    "typescript": "4.2.2",
    "webpack": "^4.43.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@uswitch/trustyle-utils.palette": "^4.0.2"
  }
}
