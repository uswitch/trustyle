{
  "name": "@uswitch/trustyle",
  "version": "0.0.6",
  "license": "MIT",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "--------------- TESTING": "-----------------------",
    "test": "jest",
    "test:jest": "jest",
    "--------------- RUNNING": "-----------------------",
    "start": "start-storybook -p 6006",
    "--------------- BUILDING": "----------------------",
    "clean": "rm -rf lib",
    "flatten-lib": "mv lib/elements/* lib/ && rm -r lib/elements/",
    "build-storybook": "build-storybook",
    "build-lib": "npm run clean && tsc && npm run flatten-lib",
    "build-pckgs": "lerna run build --ignore @uswitch/trustyle",
    "build-all": "npm run build-pckgs && npm run build-lib",
    "--------------- LINTING": "-----------------------",
    "lint:fix": "npm run typescript:check && npm run prettier:fix && npm run eslint:fix",
    "lint:check": "npm run typescript:check && npm run prettier:check && npm run eslint:check",
    "eslint:check": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 1",
    "eslint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "prettier:fix": "prettier --check --write 'src/**/*.{ts,tsx}'",
    "typescript:check": "tsc --noEmit",
    "typescript:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "@uswitch/trustyle.bullet-list-highlight": "^0.0.11",
    "react": "^16.7.0",
    "react-imgix": "^8.6.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^5.1.9",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-info": "^5.1.9",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-options": "^5.1.9",
    "@storybook/addon-viewport": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@types/react": "^16.8.21",
    "@types/storybook__addon-actions": "^3.4.3",
    "@types/storybook__addon-knobs": "^5.0.1",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "babel-loader": "^8.0.6",
    "csstype": "^2.6.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-jsx": "^6.0.2",
    "eslint-plugin-flowtype": "^3.10.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  }
}
