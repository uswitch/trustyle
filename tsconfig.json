{
  "compilerOptions": {
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/theme-ui/dist/declarations/src"
    ],
    "types": ["@emotion/core", "@emotion/react", "node", "webpack-env"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
