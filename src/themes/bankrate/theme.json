{
  "name": "Bankrate",

  "useLocalStorage": false,

  "breakpoints": ["768px", "990px"],

  "zIndices": {
    "min": 0,
    "max": 100
  },

  "shadows": {
    "box": "2px 2px 25px #0004",
    "linkInset": "inset 0 0 0 1px #008fe9",
    "card": "rgba(0, 0, 72, 0.28) 0px 23px 28px -16px, rgba(0, 0, 72, 0.06) 0px -2px 11px 0px"
  },

  "fonts": {
    "base": "Roboto, -apple-system, system-ui, system-ui, Arial, sans-serif",
    "body": "Roboto, -apple-system, system-ui, system-ui, Arial, sans-serif",
    "heading": "sofia-pro, -apple-system, sans-serif",
    "monospace": "Menlo, monospace",
    "link": "Roboto, -apple-system, system-ui, system-ui, Arial, sans-serif"
  },

  "lineHeights": {
    "base": "1.5",
    "heading": "1.2"
  },

  "fontSizes": {
    "base": 16,
    "xxs": 12,
    "xs": 14,
    "sm": 16,
    "md": 18,
    "lg": 20,
    "xl": 24,
    "xxl": 30,
    "xxxl": 36
  },

  "fontWeights": {
    "base": 400,
    "light": 300,
    "bold": 600,
    "heading": 500
  },

  "space": {
    "gutter": 14,
    "base": 16,
    "xxs": 4,
    "xs": 8,
    "sm": 16,
    "md": 24,
    "lg": 32,
    "xl": 48,
    "xxl": 64,
    "xxxl": 96
  },

  "sizes": {
    "hero": { "width": 1024 },
    "label": { "width": 280 },
    "input": { "height": 58 },
    "button": { "width": 264 },
    "footer": { "width": 576 }
  },

  "useCustomProperties": false,

  "useBodyStyles": false,

  "colors": {
    "brand": "#0157FF",
    "text": "#4c4c4c",

    "grey-0": "#FFFFFF",
    "grey-05": "#F7F7F7",
    "grey-10": "#F2F2F7",
    "grey-20": "#DFDFE1",
    "grey-30": "#C2C4C8",
    "grey-40": "#ADAFB3",
    "grey-50": "#A0A2A6",
    "grey-60": "#6D6F73",
    "grey-70": "#47494F",
    "grey-80": "#24262A",
    "grey-90": "#141424",
    "grey-100": "#050505",

    "primary": "#0157FF",
    "primary--dark": "rgb(0, 70, 212);",
    "secondary": "#924A8B",
    "secondary--dark": "#f9f9f9",

    "experimental-text": "#29335C",
    "button-secondary": "#FFFFFF",
    "button-secondary--hover": "#f0f1f3"
  },

  "radii": {
    "sm": 3,
    "md": 6,
    "lg": 16,
    "xl": 30
  },

  "srOnly": {
    "position": "absolute",
    "width": 1,
    "height": 1,
    "p": 0,
    "m": -1,
    "overflow": "hidden",
    "clip": "rect(0, 0, 0, 0)",
    "border": 0
  },

  "----------------------------- Base Styles": "-----------------------------",

  "styles": {
    "heading": {
      "fontFamily": "heading",
      "color": "grey-90",
      "lineHeight": "heading",
      "fontWeight": "heading",
      "m": 0
    },

    "h1": {
      "variant": "styles.heading",
      "fontSize": ["xxl", "xxxl"],
      "my": "md"
    },

    "h2": {
      "variant": "styles.heading",
      "fontSize": ["xl", "xxl"],
      "my": "md"
    },

    "h3": {
      "variant": "styles.heading",
      "fontSize": ["lg", "xl"],
      "my": "sm"
    },

    "h4": {
      "variant": "styles.heading",
      "fontSize": ["md", "lg"],
      "my": "sm"
    },

    "h5": {
      "variant": "styles.heading",
      "fontSize": ["sm","md"],
      "my": "sm"
    },

    "h6": {
      "variant": "styles.heading",
      "fontSize": "sm",
      "my": "sm"
    },

    "p": {
      "mb": "sm",
      "lineHeight": "base"
    },

    "root": {
      "fontFamily": "base",
      "fontSize": "md",
      "fontWeight": "base",
      "lineHeight": "base",
      "color": "grey-80",
      "-webkit-font-smoothing": "antialiased",
      "-moz-osx-font-smoothing": "grayscale"
    },

    "a": {
      "color": "brand",
      "stroke": "currentColor",
      "textDecoration": "underline",
      "transition": "opacity 0.2s ease",
      ":hover": { "opacity": 0.8 }
    },

    "blockquote": {
      "backgroundColor": "grey-10",
      "px": "md",
      "py": "sm",
      "mx": 0,
      "borderLeft": "none",

      "p": {
        "pl": "sm",
        "py": "xs",
        "my": 0,
        "color": "experimental-text",
        "borderLeft": "2px solid",
        "borderLeftColor": "grey-80",
        "fontWeight": "bold",
        "fontStyle": "normal"
      }
    },


    "table": {
      "borderSpacing": 0,
      "width": "100%",
      "borderStyle": "solid",
      "borderColor": "grey-20",
      "borderWidth": "1px",
      "borderRadius": "3px",
      "mb": "base"
    },

    "th": {
      "m": 0,
      "p": "16px",
      "fontSize": "sm",
      "textAlign": "left",
      "color": "experimental-text"
    },

    "td": {
      "m": 0,
      "p": "16px",
      "fontSize": "xs"
    },

    "tr": {
      ":nth-child(even)": {
        "backgroundColor": "grey-05"
      }
    }
  },


  "----------------------------- Variants": "-----------------------------",

  "elements": {
    "toggle-switch": {
      "base": {
        "base": {
          "width": 70,
          "height": 30,
          "switch": {
            "width": 28,
            "height": 28
          }
        },
        "checked": {
          "variant": "elements.toggle-switch.base.base",
          "backgroundColor": "primary",
          "borderColor": "primary",
          "switch": {
            "variant": "elements.toggle-switch.base.base.switch",
            "backgroundColor": "white",
            "borderColor": "primary"
          }
        },
        "unchecked": {
          "variant": "elements.toggle-switch.base.base",
          "backgroundColor": "grey-20",
          "borderColor": "grey-20",
          "switch": {
            "variant": "elements.toggle-switch.base.base.switch",
            "backgroundColor": "white",
            "borderColor": "grey-20"
          }
        }
      },
      "variants": {
        "compact": {
          "checked": {
            "switch": {
              "variant": "elements.toggle-switch.base.base.switch",
              "backgroundColor": "primary",
              "borderColor": "primary"
            }
          },
          "unchecked": {
            "switch": {
              "variant": "elements.toggle-switch.base.base.switch",
              "backgroundColor": "grey-20",
              "borderColor": "grey-20"
            }
          }
        }
      }
    },

    "breadcrumbs": {
      "base": {
        "main": {
          "color": "grey-100"
        },
        "homeIcon": {
          "color": "grey-100"
        },
        "title": {
          "color": "grey-100"
        }
      },
      "variants": {
        "light": {
          "main": {
            "color": "grey-0"
          },
          "mobileLink": {
            "color": "grey-0"
          },
          "homeIcon": {
            "color": "grey-0"
          },
          "title": {
            "color": "grey-0"
          }
        }
      }
    },

    "category": {
      "main": {
        "bg": "primary",
        "mb": "md"
      },
      "heading": {
        "color": "grey-0"
      },
      "text": {
        "color": "grey-0"
      },
      "breadcrumbs": {
        "variant": "light"
      }
    },

    "call-out": {
      "main": {
        "backgroundColor": "grey-10",
        "px": ["sm", "md"]
      },
      "icon": {
        "backgroundColor": "grey-80"
      }
    },

    "cta": {
      "base": {
        "main": {
          "backgroundColor": "grey-10"
        },
        "title": {
          "color": "experimental-text",
          "fontWeight": "bold"
        },
        "text": {
          "mb": [null, 0]
        },
        "button": {
          "ml": [null, "md"]
        }
      },
      "variants": {
        "hero": {
          "main": {
            "backgroundColor": "none",
            "color": "white"
          },
          "title": {
            "variant": "elements.cta.base.title",
            "color": "inherit"
          },
          "text": {
            "variant": "elements.cta.base.text"
          },
          "button": {
            "variant": "elements.cta.base.button"
          }
        },
        "hero-white-bg": {
          "main": {
            "backgroundColor": "white"
          },
          "title": {
            "variant": "elements.cta.base.title"
          },
          "text": {
            "variant": "elements.cta.base.text"
          },
          "button": {
            "variant": "elements.cta.base.button"
          }
        }
      }
    },
    
    "buttons": {
      "base": {
        "fontWeight": "bold",
        "border": "none",
        "fontFamily": "heading",
        "borderRadius": "4px",
        ":disabled": {
          "opacity": "0.3",
          "cursor": "not-allowed"
        },
        "btnSize": {
          "large": {
            "px": "xl",
            "py": "base",
            "fontSize": "md"
          },
          "small": {
            "px": 40,
            "py": 13,
            "fontSize": "sm"
          }
        }
      },
  
      "variants": {
        "primary": {
          "variant": "elements.buttons.base",
          "color": "white",
          "backgroundColor": "primary",
          ":hover:not(:disabled)": {
            "backgroundColor": "primary--dark"
          },
          ":focus": {
            "backgroundColor": "primary--dark"
          },
          ":active": {
            "backgroundColor": "primary--dark"
          }
        },
  
        "secondary": {
          "variant": "elements.buttons.base",
          "color": "grey-70",
          "border": "#E0E1E4 1px solid",
          "backgroundColor": "button-secondary",
          ":hover:not(:disabled)": {
            "backgroundColor": "button-secondary--hover"
          },
          ":focus": {
            "backgroundColor": "button-secondary--hover"
          },
          ":active": {
            "backgroundColor": "button-secondary--hover"
          }
        }
      }
    },
    
    "list": {
      "bullet": {
        "color": "grey-80"
      },
      "numeric": {
        "color": "grey-80",
        "::before": {
          "content": "\" - \" counter(li)",
          "left": "-2em",
          "width": "2.5em"
        }
      }
    }
  },

  "compounds": {
    "card": {
      "itemsPerRow": [1],
      "base": {
        "backgroundColor": "grey-10",
        "transition": "all 0.3s ease",
        "width": "100%",
        "height": "100%",
        "borderStyle": "solid",
        "borderColor": "grey-20",
        "borderWidth": "1px 0 0 0",
        "boxSizing": "border-box",
        "mb": "sm",
        "img": {
          "width": "100%"
        },
        "p": { "fontSize": 16, "lineHeight": "base", "color": "grey-80" },
        "h3": {
          "fontSize": 18,
          "minHeight": 0,
          "mb": "xs",
          "mt": "0",
          "a": {
            "color": "grey-100",
            "textDecoration": "none"
          }
        },
        "a": {
          "color": "text",
          "textDecoration": "none"
        },
        "content": {
          "py": "lg",
          "mr": "lg"
        },
        "mr": "base"
      },
      "variants": {
        "vertical": {
          "&:hover": {
            "box-shadow": "rgba(0,0,72,0.28) 0px 23px 28px -16px, rgba(0,0,72,0.06) 0px -2px 11px 0px",
            "opacity": 1
          },
          "tag": {
            "variant": "compounds.card.base.tag"
          },

          "superScript": {
            "variant": "compounds.card.base.superScript"
          },

          "meta": {
            "variant": "compounds.card.base.meta"
          },

          "content": {
            "variant": "compounds.card.base.content",
            "pt": "sm",
            "px": "sm"
          },
          "link": {
            "variant": "compounds.card.base.link"
          },
          "variant": "compounds.card.base"
        },
        "horizontal": {
          "variant": "compounds.card.base",
          "display": "flex",
          "flexDirection": "row-reverse",
          "alignItems": "start",
          "image": {
            "pt": "lg",
            "width": 250
          },

          "content": {
            "width": 670,
            "variant": "compounds.card.base.content"
          },
          "link": {
            "variant": "compounds.card.base.link"
          }
        }
      }
    },

    "accordion": {
      "base": {
        "mt": "sm",
        "mb": "sm",
        "title": {
          "mt": "0",
          "mb": "xs"
        },
        "content": {
          "mb": "xs"
        },
        "button": {
          "p": "0",
          "pt": 10,
          "pb": 10,
          "bg": "transparent",
          "fontFamily": "heading",
          "fontSize": "xl",
          "fontWeight": "base",
          "color": "textColor",
          "alignItems": "center",
          "borderWidth": "0",
          "display": "flex",
          "flexDirection": "row",
          "width": "100%"
        },
        "caret": {
          "color": "primary"
        }
      },
      "variants": {
        "isActive": {
          "button": {
            "variant": "compounds.accordion.base.button"
          },
          "caret": {
            "color": "primary--dark"
          }
        }
      }
    },

    "breadcrumbs": {
      "py": "xxs",
      "position": "relative",
      "flex-grow": "1"
    },

    "side-nav": {
      "paddingLeft": 0,
      "marginLeft": 0,
      "border": 0,
      "layout": {
        "flexDirection": ["column-reverse", "column-reverse", "column-reverse"],
        "text": [12, 12, 12],
        "nav": [12, 12, 12]
      },

      "internalLinkList": {
        "listStyle": "none",
        "pl": 0,
        "pt": "xxs",
        "pb": "xxs",
        "m": 0
      },
      "internalLinkListItem": {
        "base": {
          "mb": 0,
          "borderBottomWidth": 2,
          "borderBottomStyle": "solid",
          "borderColor": "grey-10",
          "position": "relative",
          "&:hover":{
            "backgroundColor": "grey-10"
          },
          ">a": {
            "&:hover":{
              "ml": "sm"
            },
            "transition": "all 0.2s ease-in-out",
            "display": "block",
            "color": "grey-60",
            "textDecoration": "none",
            "fontSize": "sm",
            "fontWeight": "bold",
            "py": "sm",
            ":visited": {
              "color": "grey-60"
            }
          }
        },
        "isActive": {
          "variant": "compounds.side-nav.internalLinkListItem.base"
        }
      },
      "additionalLink": {
        "display": "block",
        "mb": "xxs",
        "color": "grey-80",
        "pt": "xxs",
        "pb": "xxs",
        "textDecoration": "none"
      }
    },

    "breadcrumb": {
      "my": "sm",
      "mx": 0
    },

    "cookie-banner": {
      "heading": {
        "mt": [0, "xs", "xs"],
        "color": "grey-80"
      },
      "hr": {
        "border": 0,
        "height": 1,
        "bg": "grey-20"
      },
      "copy": {
        "mb": ["md", "sm", null],
        "mt": "base"
      },
      "accept-all-button": {
        "variant": "primary"
      },
      "save-preferences-button": {
        "variant": "secondary"
      },
      "button-with-checkbox": {
        "border": "1px solid",
        "borderColor": "#E0E1E4",
        "backgroundColor": "white",
        "borderRadius": 4,
        "color": "grey-70"
      },
      "button-with-checkbox-checked": {
        "variant": "compounds.cookie-banner.button-with-checkbox",
        "borderColor": "primary",
        "color": "grey-100"
      }
    }
  },

  "modules": {
    "hero-with-background-image": {
      "::before": {
        "background-image": "linear-gradient(90deg, rgba(0, 2, 11, 0.75) 0%, rgba(0, 2, 11, 0) 100%)",
        "position": "absolute",
        "left": 0,
        "top": 0,
        "bottom": 0,
        "right": 0,
        "content": "''"
      },
      "position": "relative",
      "color": "white",
      "h1,h2,h3,h4,h5,h6,p": {
        "color": "white"
      },
      "height": 420,
      "boxSizing": "border-box",
      "*": {
        "zIndex": 1
      },
      "> *": {
        "height": "100%",
        "display": "flex",
        "flex-direction": "column"
      },
      "mb": "xl",
      "pb": "xl",
      "pt": "xs"
    }
  },

  "layout": {
    "flex-grid": {
      "sizes": {
        "gutter": "gutter",
        "verticalGutter": "sm"
      },
      "container": {
        "maxWidth": 1248
      }
    }
  },

  "container": {
    "lg": { "maxWidth": 1210, "mx": "auto", "px": "md" }
  },

  "input": {
    "textInput": {
      "wrapper": {
        "borderRadius": "3px"
      }
    }
  },

  "author": {
    "heading": {
    },
    "image-link": {
      "height": [48, 48],
      "width": [48, 48]
    },
    "link": {
      "fontWeight": "base"
    },
    "text": {
      "fontWeight": "base"
    }
  },

  "richTextModule": {
    "contentCols": 12,
    "contentSpan": 8
  },



  "----------------------------- Depreciated": "-----------------------------",

  "sideNav": {
    "internalLinkList": {
      "listStyle": "none",
      "pl": 0,
      "pt": "xxs",
      "pb": "xxs",
      "m": 0
    },
    "internalLinkListItem": {
      "base": {
        "mb": 0,
        "position": "relative",
        ">a": {
          "transition": "all 0.2s ease-in-out",
          "display": "block",
          "color": "grey-70",
          "textDecoration": "none",
          "fontSize": "sm",
          "p": "12px 16px",
          ":visited": {
            "color": "grey-70"
          }
        }
      },
      "isActive": {
        "variant": "sideNav.internalLinkListItem.base",
        "color": "primary",
        "bg": "rgb(247, 247, 248)",
        "::after": {
          "variant": "sideNav.internalLinkListItem.base.::after",
          "content": "\"\"",
          "position": "absolute",
          "top": "0",
          "left": "0",
          "display": "block",
          "width": 4,
          "height": "100%",
          "backgroundColor": "primary"
        },
        ">a": {
          "variant": "sideNav.internalLinkListItem.base.>a",
          "color": "primary",
          "fontWeight": "bold",
          "transform": "translateX(8px)",
          ":visited": {
            "color": "primary"
          }
        }
      }
    },
    "additionalLink": {
      "display": "block",
      "mb": "xxs",
      "color": "grey-80",
      "pt": "xxs",
      "pb": "xxs",
      "textDecoration": "none"
    }
  }

}
