{
  "name": "uSwitch",

  "breakpoints": ["768px", "990px"],

  "zIndices": {
    "min": 0,
    "max": 100
  },

  "shadows": {
    "box": "2px 2px 25px #0004",
    "linkInset": "inset 0 0 0 1px #008fe9"
  },

  "fonts": {
    "base": "'Helvetica Now Text', -apple-system, sans-serif",
    "heading": "'Helvetica Now Display', -apple-system, sans-serif",
    "monospace": "Menlo, monospace"
  },

  "lineHeights": {
    "base": "1.5",
    "heading": "1.3"
  },

  "fontSizes": {
    "base": 16,
    "xxs": 12,
    "xs": 14,
    "sm": 16,
    "md": 18,
    "lg": 20,
    "xl": 24,
    "xxl": 30,
    "xxxl": 36
  },

  "fontWeights": {
    "base": 400,
    "light": 300,
    "bold": 600
  },

  "space": {
    "base": 16,
    "xxs": 4,
    "xs": 8,
    "sm": 16,
    "md": 24,
    "lg": 32,
    "xl": 48,
    "xxl": 64,
    "xxxl": 96
  },

  "sizes": {
    "grid": {
      "lg-docs": "// 84 + 16 gutter up to 12 columns",
      "lg": {
        "1": 82,
        "2": 180,
        "3": 278,
        "4": 376,
        "5": 474,
        "6": 572,
        "7": 670,
        "8": 768,
        "9": 866,
        "10": 964,
        "11": 1062,
        "12": 1160
      },
      "md-docs": "// 64 + 16 gutter up to 12 columns",
      "md": {
        "1": 64,
        "2": 144,
        "3": 224,
        "4": 304,
        "5": 384,
        "6": 464,
        "7": 544,
        "8": 624,
        "9": 704,
        "10": 784,
        "11": 864,
        "12": 944
      },
      "sm-docs": "// 58 + 16 gutter up to 12 columns",
      "sm": {
        "1": 58,
        "2": 132,
        "3": 206,
        "4": 280
      }
    },
    "hero": { "width": 1280 },
    "label": { "width": 280 },
    "input": { "height": 58 },
    "button": { "width": 264 },
    "footer": { "width": 576 }
  },

  "useCustomProperties": false,

  "colors": {
    "blue": "#84A6FF",
    "blue-75": "#A3BCFF",
    "blue-50": "#C1D3FF",
    "blue-25": "#E0E9FF",
    "purple": "#AC96DE",
    "purple-75": "#C1B0E6",
    "purple-50": "#D5CBEF",
    "purple-25": "#EAE5F7",
    "green": "#91CA50",
    "green-75": "#ACD77C",
    "green-50": "#C8E4A7",
    "green-25": "#E3F2D3",
    "red": "#FF7585",
    "red-75": "#FF97A3",
    "red-50": "#FFBAC2",
    "red025": "#FFDDE0",
    "pink":  "#FF80DA",
    "pink-75": "#FFA0E3",
    "pink-50": "#FFBFEC",
    "pink-25": "#FFDFF6",
    "yellow": "#FFD555",
    "yellow-75": "#FFDF80",
    "yellow-50": "#FFEAAA",
    "yellow-25": "#FFF4D5",
    "orange": "#FFAA55",
    "orange-75": "#FFBF80",
    "orange-50": "#FFD4AA",
    "orange-25": "#FFEAD5",
    "black": "#141424",
    "black-75": "#4F4F5B",
    "black-50": "#898991",
    "black-25": "#C4C4C8",

    "uswitch-navy": "#141424",

    "grey-90": "#2C2C3A",
    "grey-80": "#434350",
    "grey-70": "#575761",
    "grey-60": "#72727C",
    "grey-50": "#898991",
    "grey-40": "#A1A1A7",
    "grey-30": "#B9B9BD",
    "grey-20": "#D0D0D3",
    "grey-10": "#E8E8E9",
    "grey-05": "#F3F3F4",
    "white": "#FFFFFF"
  },

  "radii": {
    "sm": 3,
    "md": 6,
    "lg": 16,
    "xl": 30
  },

  "----------------------------- Variants": "-----------------------------",
  "modules": {
    "content-hero-module": {
      "h1": {
        "mb": "sm",
        "mt": 0,
        "pt": ["sm", "sm", "lg"]
      },

      "h4": { "fontSize": "md", "fontWeight": "normal" },

      "p": {
        "width": ["auto", "grid.md.5", "grid.lg.5"],
        "textAlign": ["left", "left", "center"],
        "my": [0, 0, "xxs"],
        "px": [0, 0, "md"],
        "display": ["inline", "inline", "block"]
      },

      "a": {
        "fontSize": ["base", "base", "lg"],
        "textDecoration": "underline"
      },

      "content": {
        "display": "flex",
        "alignItems": "flex-end",

        "modules": {
          "width": ["100%", "50%", "50%"],
          "mb": "lg"
        },

        "image": {
          "height": [0, 0, 320],
          "width": [0, 0, "50%"],
          "mx": "auto",
          "backgroundSize": 500,
          "backgroundPosition": "bottom"
        }
      }
    }
  },

  "accordion": {
    "base": {
      "button": {
        "padding": "sm",
        "bg": "grey-05",
        "fontFamily": "base",
        "fontSize": "base",
        "fontWeight": "bold",
        "color": "uswitch-navy",
        "alignItems": "center",
        "border": 0,
        "display": "flex",
        "flexDirection": "row",
        "width": "100%"
      },
      "caret": {
        "color": "black"
      }
    },
    "isActive": {
      "button": {
        "variant": "accordion.base.button",
        "bg": "uswitch-navy",
        "color": "white"
      },
      "caret": {
        "color": "white"
      }
    }
  },

  "sideNav": {
    "internalLinkList": {
      "listStyle": "none",
      "paddingLeft": 0,
      "paddingTop": "xxs",
      "paddingBottom": "xxs",
      "margin": 0
    },
    "internalLinkListItem": {
      "base": {
        "mb": 0,
        "position": "relative",
        ">a": {
          "display": "block",
          "color": "grey-70",
          "textDecoration": "none",
          "fontSize": "sm",
          "padding": "12px 16px",
          ":visited": {
            "color": "grey-70"
          }
        }
      },
      "isActive": {
        "variant": "sideNav.internalLinkListItem.base",
        "color": "uswitch-navy",
        "::after": {
          "variant": "sideNav.internalLinkListItem.base.::after",
          "content": "\"\"",
          "position": "absolute",
          "top": "0",
          "left": "0",
          "display": "block",
          "width": 4,
          "height": "100%",
          "backgroundColor": "uswitch-navy"
        },
        ">a": {
          "variant": "sideNav.internalLinkListItem.base.>a",
          "color": "uswitch-navy",
          ":visited": {
            "color":  "uswitch-navy"
          }
        }
      }
    },
    "additionalLink": {
      "display": "block",
      "marginBottom": "xxs",
      "color": "grey-80",
      "paddingTop": "xxs",
      "paddingBottom": "xxs",
      "textDecoration": "none"
    }
  },

  "compounds": {
    "card": {
      "display": "flex",
      "width": ["100%", "49%", "grid.lg.3"],
      "flexDirection": "column",
      "borderRadius": "sm",
      "borderStyle": "solid",
      "borderColor": "grey-80",
      "borderWidth": "1px",
      "mb": "sm",
      "img": {
        "sm": { "width": "100%", "height": 230 },
        "md": { "width": "100%", "height": 230 },
        "lg": { "maxWidth": "grid.lg.3", "height": 230 }
      },
      "p": { "fontSize": 14 },
      "h4": { "fontSize": 18, "minHeight": 0 },
      "content": {
        "height": "100%",
        "p": "sm",
        "a": {
          "pb": "xs"
        }
      }
    },

    "click-out-form": {
      "flexDirection": "column",
      "width": ["auto", "grid.md.5", "grid.lg.5"],
      "backgroundColor": "white",
      "p": ["sm", "sm", "lg"],
      "borderRadius": [0, "md", "md"],
      "mx": [-20, 0],
      "& input, & button": {
        "fontSize": "md",
        "width": "100%"
      },
      "& button": {
        "textAlign": "center"
      }
    },

    "breadcrumb": {
      "my": "sm",
      "mx": 0
    }
  },

  "container": {
    "sm": { "px": 20 },
    "md": { "px": 72 },
    "lg": { "maxWidth": 1280, "mx": "auto", "px": "md" },
    "content": {
      "maxWidth": 1280,
      "mx": "auto",
      "px": "md",
      "contentStyle": {
        "width": ["100%", "grid.lg.8"]
      }
    },
    "hero": { "maxWidth": 1280, "mx": "auto", "px": 60 }
  },

  "hero": {
    "sm": { "minHeight": 360, "pb": 34 },
    "md": { "minHeight": 280, "pb": 56 },
    "lg": { "minHeight": 438, "pb": 82 }
  },

  "imageCalloutContent": {
    "sm": { "pt": "xl" },
    "lg": { "pt": "xl" }
  },

  "imageCallout": {
    "imageSize": { "height": 337, "width": 477 },
    "sm": { "display": "flex", "width": 320, "mx": "auto" },
    "md": { "display": "flex", "width": 768, "mx": "auto" },
    "lg": {
      "display": "flex",
      "justifyContent": "space-between",
      "width": 1280,
      "px": 158,
      "mx": "auto"
    },
    "right": { "flexDirection": "row-reverse", "alignItems": "flex-start" },
    "left": { "flexDirection": "row", "alignItems": "flex-start" },
    "column": { "flexDirection": "column", "alignItems": "center" }
  },

  "card": {
    "sm": {
      "image": { "width": "100%", "height": "auto" }
    },

    "lg": {
      "image": { "width": 278, "height": 230 }
    }
  },

  "buttons": {
    "primary": {
      "backgroundColor": "uswitch-navy",
      "color": "white",
      "textAlign": "center",
      "width": ["100%"],
      "paddingX": "lg",
      "border": "none",
      "fontWeight": "bold",
      ":hover": {
        "backgroundColor": "grey-70"
      },
      ":disabled": {
        "backgroundColor": "grey-20",
        "cursor": "not-allowed"
      },
      ":visited": {
        "color": "white"
      }
    },

    "secondary": {
      "color": "uswitch-navy",
      "background": "none",
      "border": "2px solid",
      "borderColor": "uswitch-navy",
      "paddingX": "lg",
      ":hover": {
        "backgroundColor": "grey-10"
      },
      ":disabled": {
        "color": "grey-40",
        "borderColor": "grey-20",
        "cursor": "not-allowed"
      },
      ":visited": {
        "color": "uswitch-navy"
      }
    },

    "reversed": {
      "color": "white",
      "backgroundColor": "uswitch-navy",
      "paddingX": "lg",
      "border": "2px solid",
      "borderColor": "white",
      "textAlign": "center",
      "fontWeight": "bold",
      ":hover": {
        "backgroundColor": "grey-80"
      },
      ":disabled": {
        "borderColor": "grey-60",
        "color": "grey-60",
        "cursor": "not-allowed"
      },
      ":visited": {
        "color": "white"
      }
    }
  },

  "callOut": {
    "main": {
      "backgroundColor": "grey-05"
    },
    "heading": {
      "marginTop": "-5px"
    },
    "icon": {
      "backgroundColor": "uswitch-navy"
    }
  },

  "cta": {
    "main": {
      "borderWidth": 1,
      "borderStyle": "solid",
      "borderColor": "grey-10",
      "borderLeftWidth": 10,
      "borderLeftColor": "#A3BCFF",
      "padding": "sm"
    },
    "button": {
      "variant": "primary",
      "width": "auto"
    }
  },

  "pagination": {
    "arrow": {
      "color": "#84A6FF"
    },
    "arrowDisabled": {
      "opacity": 0.5
    },
    "currentPage": {
      "color": "uswitch-navy",
      "fontSize": "sm"
    },
    "nonCurrentPage": {
      "opacity": 0.5,
      "fontSize": "xxs"
    }
  },

  "categoryTitle": {
    "main": {
      "backgroundColor": "blue-50"
    },
    "heading": {
      "color": "uswitch-navy"
    },
    "text": {
      "color": "uswitch-navy"
    }
  },

  "breadcrumbs": {
    "main": {
      "color": "uswitch-navy"
    },
    "homeIcon": {
      "color": "uswitch-navy"
    },
    "title": {
      "color": "uswitch-navy",
      "fontWeight": "bold"
    }
  },

  "styles": {
    "h1": {
      "fontFamily": "heading",
      "color": "uswitch-navy",
      "fontSize": "xxxl",
      "fontWeight": "bold",
      "lineHeight": "heading",
      "marginY": "lg"
    },

    "h2": {
      "variant": "styles.h1",
      "fontSize": "xxl"
    },

    "h3": {
      "variant": "styles.h1",
      "fontSize": "xl"
    },

    "h4": {
      "variant": "styles.h1",
      "fontSize": "md",
      "marginY": "sm"
    },

    "h5": {
      "variant": "styles.h1",
      "fontSize": "sm",
      "marginY": "sm"
    },

    "h6": {
      "variant": "styles.h1",
      "fontSize": "xs",
      "marginY": "sm"
    },

    "root": {
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "base",
      "lineHeight": "base",
      "color": "uswitch-navy"
    },

    "a": {
      "color": "inherit",
      "stroke": "currentColor",
      "textDecoration": "underline",
      "transition": "oapcity 0.2s ease",
      ":visited": { "color": "inherit" },
      ":hover": { "opacity": 0.8 }
    },

    "blockquote": {
      "backgroundColor": "grey-05",
      "paddingX": "md",
      "paddingY": "sm",
      "marginX": 0,
      "borderLeft": "none",

      "p": {
        "paddingLeft": "sm",
        "paddingY": "xs",
        "marginY": 0,
        "borderLeft": "2px solid",
        "borderLeftColor": "#84A6FF",
        "fontWeight": "bold",

        "::before": {
          "content": "\"“\""
        },

        "::after": {
          "content": "\"“\""
        }
      }
    }
  }
}
