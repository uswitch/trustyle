{
  "name": "uSwitch",

  "breakpoints": ["768px", "990px"],

  "zIndices": {
    "min": 0,
    "max": 100
  },

  "shadows": {
    "box": "2px 2px 25px #0004",
    "linkInset": "inset 0 0 0 1px #008fe9"
  },

  "fonts": {
    "base": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,Arial,sans-serif",
    "link": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,Arial,sans-serif",
    "body": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,Arial,sans-serif",
    "heading": "sofia-pro, sans-serif",
    "monospace": "Menlo, monospace"
  },

  "lineHeights": {
    "base": "26px",
    "sm": "16px",
    "md": "26px"
  },

  "fontSizes": {
    "base": 16,
    "xxs": 12,
    "xs": 14,
    "sm": 16,
    "md": 18,
    "lg": 20,
    "xl": 24,
    "xxl": 30,
    "xxxl": 36
  },

  "fontWeights": {
    "base": 400,
    "light": 300,
    "bold": 600
  },

  "space": {
    "base": 16,
    "xxs": 8,
    "xs": 12,
    "sm": 16,
    "md": 24,
    "lg": 36,
    "xl": 56,
    "xxl": 64
  },

  "sizes": {
    "grid": {
      "lg-docs": "// 84 + 16 gutter up to 12 columns",
      "lg": {
        "1": 82,
        "2": 180,
        "3": 278,
        "4": 376,
        "5": 474,
        "6": 572,
        "7": 670,
        "8": 768,
        "9": 866,
        "10": 964,
        "11": 1062,
        "12": 1160
      },
      "md-docs": "// 64 + 16 gutter up to 12 columns",
      "md": {
        "1": 64,
        "2": 144,
        "3": 224,
        "4": 304,
        "5": 384,
        "6": 464,
        "7": 544,
        "8": 624,
        "9": 704,
        "10": 784,
        "11": 864,
        "12": 944
      },
      "sm-docs": "// 58 + 16 gutter up to 12 columns",
      "sm": {
        "1": 58,
        "2": 132,
        "3": 206,
        "4": 280
      }
    },
    "hero": { "width": 1280 },
    "label": { "width": 280 },
    "input": { "height": 58 },
    "button": { "width": 264 },
    "footer": { "width": 576 }
  },

  "useCustomProperties": false,

  "colors": {
    "periwinkle": "#C1D3FF",
    "primary": "#d64226",
    "primary-hover": "#ab351e",
    "secondary": "#1c1f4e",
    "secondary-hover": "#99e2ff",
    "heading": "#2f353a",
    "link": "#008fe9",
    "link-2": "#002396",
    "brand": "#1c1f4e",
    "accent-1": "#00aa4e",
    "accent-2": "#6abd45",
    "accent-3": "#00b9d9",
    "text": "#000000",
    "dark-1": "#000000",
    "dark-2": "#3d3d3d",
    "light-1": "#fffffe",
    "light-2": "#ECECEE",
    "light-3": "#e6e6e6",
    "hero": "#99e2ff",
    "light-blue": "#caefff",
    "light-grey-blue": "#b0b8bf",
    "anakiwa": "#99e2ff",
        
    "uswitch-navy": "#141424",
    "grey-70": "#575761"
  },

  "radii": {
    "sm": 3,
    "md": 6,
    "lg": 16,
    "xl": 30
  },

  "----------------------------- Variants": "-----------------------------",
  "modules": {
    "content-hero-module": {
      "h1": {
        "mb": "sm",
        "mt": 0,
        "pt": ["sm", "sm", "lg"]
      },

      "h4": { "fontSize": "md", "fontWeight": "normal" },

      "p": {
        "width": ["auto", "grid.md.5", "grid.lg.5"],
        "textAlign": ["left", "left", "center"],
        "my": [0, 0, "xxs"],
        "px": [0, 0, "md"],
        "display": ["inline", "inline", "block"]
      },

      "a": {
        "fontSize": ["base", "base", "lg"],
        "textDecoration": "underline"
      },

      "content": {
        "display": "flex",
        "alignItems": "flex-end",

        "modules": {
          "width": ["100%", "50%", "50%"],
          "mb": "lg"
        },

        "image": {
          "height": [0, 0, 320],
          "width": [0, 0, "50%"],
          "mx": "auto",
          "backgroundSize": 500,
          "backgroundPosition": "bottom"
        }
      }
    }
  },

  "accordion": {
    "button": {
      "padding": "sm",
      "bg": "uswitch-navy",
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "bold",
      "color": "light-1",
      "alignItems": "center"
    },
    "caret": {
      "color": "light-1"
    },

    "isActive": {
      "caret": {
        "color": "light-1"
      }
    }
  },

  "compounds": {
    "card": {
      "display": "flex",
      "width": ["100%", "49%", "grid.lg.3"],
      "flexDirection": "column",
      "borderRadius": "sm",
      "borderStyle": "solid",
      "borderColor": "dark-2",
      "borderWidth": "1px",
      "mb": "sm",
      "img": {
        "sm": { "width": "100%", "height": 230 },
        "md": { "width": "100%", "height": 230 },
        "lg": { "maxWidth": "grid.lg.3", "height": 230 }
      },
      "p": { "fontSize": 14 },
      "h4": { "fontSize": 18, "minHeight": 0 },
      "content": {
        "height": "100%",
        "p": "sm",
        "a": {
          "pb": "xs"
        }
      }
    },

    "click-out-form": {
      "flexDirection": "column",
      "width": ["auto", "grid.md.5", "grid.lg.5"],
      "backgroundColor": "light-1",
      "p": ["sm", "sm", "lg"],
      "borderRadius": [0, "md", "md"],
      "mx": [-20, 0],
      "& input, & button": {
        "fontSize": "md",
        "width": "100%"
      },
      "& button": {
        "textAlign": "center"
      }
    },

    "breadcrumb": {
      "my": "sm",
      "mx": 0
    }
  },

  "container": {
    "sm": { "px": 20 },
    "md": { "px": 72 },
    "lg": { "maxWidth": 1280, "mx": "auto", "px": "md" },
    "content": {
      "maxWidth": 1280,
      "mx": "auto",
      "px": "md",
      "contentStyle": {
        "width": ["100%", "grid.lg.8"]
      }
    },
    "hero": { "maxWidth": 1280, "mx": "auto", "px": 60 }
  },

  "hero": {
    "sm": { "minHeight": 360, "pb": 34 },
    "md": { "minHeight": 280, "pb": 56 },
    "lg": { "minHeight": 438, "pb": 82 }
  },

  "imageCalloutContent": {
    "sm": { "pt": "xl" },
    "lg": { "pt": "xl" }
  },

  "imageCallout": {
    "imageSize": { "height": 337, "width": 477 },
    "sm": { "display": "flex", "width": 320, "mx": "auto" },
    "md": { "display": "flex", "width": 768, "mx": "auto" },
    "lg": {
      "display": "flex",
      "justifyContent": "space-between",
      "width": 1280,
      "px": 158,
      "mx": "auto"
    },
    "right": { "flexDirection": "row-reverse", "alignItems": "flex-start" },
    "left": { "flexDirection": "row", "alignItems": "flex-start" },
    "column": { "flexDirection": "column", "alignItems": "center" }
  },

  "card": {
    "sm": {
      "image": { "width": "100%", "height": "auto" }
    },

    "lg": {
      "image": { "width": 278, "height": 230 }
    }
  },

  "buttons": {
    "base": {
      "backgroundColor": "primary",
      "color": "light-1",
      "textAlign": "center",
      "width": ["100%"],
      "border": "none",
      "fontWeight": "bold",
      "borderRadius": "sm",
      ":hover": {
        "backgroundColor": "primary-hover",
        "boxShadow": "inset 0 0 0 1px ${color}"
      },
      ":disabled": {
        "backgroundColor": "primary",
        "opacity": "0.6",
        "cursor": "not-allowed"
      },
      ":visited": {
        "color": "light-1"
      }
    },

    "continue": {
      "color": "link-2",
      "backgroundColor": "light-blue",
      ":hover": {
        "backgroundColor": "secondary-hover"
      },
      ":disabled": {
        "backgroundColor": "light-blue",
        "opacity": "0.6",
        "cursor": "not-allowed"
      },
      ":visited": {
        "color": "link-2"
      }
    },

    "secondary": {
      "color": "black",
      "backgroundColor": "light-1",
      "border": "1px solid",
      "borderColor": "light-grey-blue",
      ":hover": {
        "backgroundColor": "light-1",
        "borderColor": "link",
        "boxShadow": "linkInset"
      },
      ":disabled": {
        "borderColor": "light-grey-blue",
        "opacity": "0.6",
        "cursor": "not-allowed",
        "boxShadow": "none"
      },
      ":visited": {
        "color": "black"
      }
    }
  },

  "callOut": {
    "main": {
      "backgroundColor": "light-2"
    },
    "heading": {
      "marginTop": "-5px"
    },
    "icon": {
      "backgroundColor": "dark-1"
    }
  },

  "cta": {
    "main": {
      "borderWidth": 1,
      "borderStyle": "solid",
      "borderColor": "light-3",
      "borderLeftWidth": 10,
      "borderLeftColor": "#A3BCFF",
      "padding": "sm"
    },
    "button": {
      "variant": "primary",
      "width": "auto"
    }
  },

  "pagination": {
    "arrow": {
      "color": "#84A6FF"
    },
    "arrowDisabled": {
      "opacity": 0.5
    },
    "currentPage": {
      "color": "dark-1",
      "fontSize": "sm"
    },
    "nonCurrentPage": {
      "opacity": 0.5,
      "fontSize": "xxs"
    }
  },

  "categoryTitle": {
    "main": {
      "backgroundColor": "periwinkle"
    },
    "heading": {
      "color": "dark-1"
    },
    "text": {
      "color": "dark-1"
    }
  },

  "styles": {
    "root": {
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "base",
      "lineHeight": "base",
      "color": "text"
    },

    "h1": {
      "fontFamily": "heading",
      "color": "secondary",
      "fontSize": ["md", "xxl", "xxl"],
      "fontWeight": "bold"
    },

    "h2": {
      "fontFamily": "heading",
      "color": "heading",
      "fontSize": "lg",
      "fontWeight": "medium",
      "pb": "base"
    },

    "h3": {
      "margin": 0,
      "fontFamily": "heading",
      "fontSize": "md",
      "fontWeight": "medium",
      "color": "brand"
    },

    "h4": {
      "margin": 0,
      "fontFamily": "heading",
      "fontSize": "md",
      "fontWeight": "medium",
      "color": "brand"
    },

    "a": {
      "color": "link",
      "stroke": "link",
      "transition": "all 0.2s ease",
      ":visited": { "color": "link", "stroke": "link" },
      ":hover": { "color": "link", "stroke": "link" },
      "> *": { "transition": "all 0.2s ease" }
    },

    "blockquote": {
      "backgroundColor": "light-2",
      "paddingX": "md",
      "paddingY": "sm",
      "marginX": 0,
      "borderLeft": "none",

      "p": {
        "paddingLeft": "sm",
        "paddingY": "xs",
        "marginY": 0,
        "borderLeft": "2px solid",
        "borderLeftColor": "#84A6FF",
        "fontWeight": "bold",

        "::before": {
          "content": "\"“\""
        },

        "::after": {
          "content": "\"“\""
        }
      }
    }
  }
}
