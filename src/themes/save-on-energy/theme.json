{
  "name": "saveOnEnergy",

  "useLocalStorage": false,

  "breakpoints": ["768px", "1280px"],

  "fonts": {
    "base": "Montserrat, sans-serif",
    "link": "Montserrat, sans-serif",
    "body": "Montserrat, sans-serif",
    "heading": "Montserrat, sans-serif",
    "monospace": "Menlo, monospace"
  },

  "lineHeights": {
    "base": "26px",
    "sm": "16px",
    "md": "26px"
  },

  "fontSizes": {
    "base": 16,
    "xxs": 12,
    "xs": 14,
    "sm": 20,
    "md": 24,
    "lg": 32,
    "xl": 42,
    "xxl": 52
  },

  "fontWeights": {
    "base": 400,
    "light": 300,
    "bold": 600
  },

  "space": {
    "base": 16,
    "xxs": 8,
    "xs": 12,
    "sm": 16,
    "md": 24,
    "lg": 36,
    "xl": 56,
    "xxl": 64
  },

  "sizes": {
    "grid": {
      "lg-docs": "// 84 + 16 gutter up to 12 columns",
      "lg": {
        "1": 82,
        "2": 180,
        "3": 278,
        "4": 376,
        "5": 474,
        "6": 572,
        "7": 670,
        "8": 768,
        "9": 866,
        "10": 964,
        "11": 1062,
        "12": 1160
      },
      "md-docs": "// 64 + 16 gutter up to 12 columns",
      "md": {
        "1": 64,
        "2": 144,
        "3": 224,
        "4": 304,
        "5": 384,
        "6": 464,
        "7": 544,
        "8": 624,
        "9": 704,
        "10": 784,
        "11": 864,
        "12": 944
      },
      "sm-docs": "// 58 + 16 gutter up to 12 columns",
      "sm": {
        "1": 58,
        "2": 132,
        "3": 206,
        "4": 280
      }
    },
    "hero": { "width": 1280 },
    "label": { "width": 280 },
    "input": { "height": 58 },
    "button": { "width": 264 },
    "footer": { "width": 576 }
  },

  "useCustomProperties": false,

  "useBodyStyles": false,

  "colors": {
    "primary": "#446db5",
    "secondary": "#00aa4e",
    "heading": "#443160",
    "link": "#009fbb",
    "brand": "#443160",
    "accent-1": "#00aa4e",
    "accent-2": "#6abd45",
    "accent-3": "#00b9d9",
    "text": "#000000",
    "dark-1": "#000000",
    "dark-2": "#3d3d3d",
    "light-1": "#ffffff",
    "light-2": "#f9f9f9",
    "light-3": "#e6e6e6",
    "hero": "rgba(212, 242, 255, 0.8)",
    "hero-solid": "D4F2F1"
  },

  "radii": {
    "sm": 3,
    "lg": 16,
    "xl": 30
  },

  "srOnly": {
    "position": "absolute",
    "width": 1,
    "height": 1,
    "padding": 0,
    "margin": -1,
    "overflow": "hidden",
    "clip": "rect(0, 0, 0, 0)",
    "border": 0
  },

  "container": {
    "sm": { "px": 20 },
    "md": { "px": 72 },
    "lg": { "px": 64, "width": 1280, "mx": "auto" },
    "content": { "width": 1280, "px": 158, "mx": "auto" },
    "hero": { "width": 1280, "mx": "auto", "px": 60 }
  },

  "hero": {
    "sm": {
      "py": 34
    },
    "md": {
      "py": 56
    },
    "lg": {
      "py": 82
    }
  },

  "imageCalloutContent": {
    "sm": { "pt": "xl" },
    "lg": { "pt": "xl" }
  },

  "----------------------------- Variants": "-----------------------------",
  "compounds": {
    "card": {
      "base": {
        "display": "inline-flex !important",
        "flexDirection": ["column", "row"],
        "img": {
          "width": ["100%", "grid.md.6", "grid.md.5"]
        },
        "content": {
          "paddingY": ["sm", 0],
          "paddingX": [0, "sm"]
        }
      },
      "variants": {
        "vertical": {
          "variant": "compounds.card.base",
          "content": {
            "variant": "compounds.card.base.content"
          },
          "link": {
            "variant": "compounds.card.base.link"
          }
        },
        "horizontal": {
          "variant": "compounds.card.base",
          "display": "flex",
          "alignItems": "start",
          "image": {
            "width": 474,
            "mr": 32
          },

          "content": {
            "width": 670,
            "variant": "compounds.card.base.content"
          },
          "link": {
            "variant": "compounds.card.base.link"
          }
        }
      }
    },

    "click-out-form": {
      "flexDirection": ["column", "row", "row"],
      "width": "100%"
    }
  },

  "imageCallout": {
    "imageSize": { "height": 337, "width": 477 },
    "sm": { "display": "flex", "width": 320, "mx": "auto" },
    "md": { "display": "flex", "width": 768, "mx": "auto" },
    "lg": {
      "display": "flex",
      "justifyContent": "space-between",
      "width": 1280,
      "px": 158,
      "mx": "auto"
    },
    "right": { "flexDirection": "row-reverse", "alignItems": "flex-start" },
    "left": { "flexDirection": "row", "alignItems": "flex-start" },
    "column": { "flexDirection": "column", "alignItems": "center" }
  },

  "card": {
    "sm": {
      "image": {
        "width": "100%",
        "height": "auto"
      }
    },
    "lg": {
      "image": {
        "width": 278,
        "height": 230
      }
    },
    "flexDirection": {
      "flexDirection": "row"
    }
  },

  "input": {
    "textInput": {
      "wrapper": {
        "borderRadius": "3px"
      }
    }
  },

  "buttons": {
    "variants": {
      "primary": {
        "color": "light-1",
        "border": "none",
        "borderRadius": "sm",
        "backgroundColor": "primary",
        "backgroundImage": "url(/uk/static/images/rarr.svg)",
        "backgroundRepeat": "no-repeat",
        "backgroundPosition": ["95% center", "90% center", "90% center"],
        "backgroundSize": ["auto", "auto", "13%"],
        "width": ["100%", "grid.md.3", "grid.lg.2"]
      },
      "secondary": {
        "color": "light-1",
        "backgroundColor": "secondary"
      }
    }
  },
  
  "logoCollection": {
    "base": {
      "mr": "16px",
      "img": {
        "maxWidth": "250px",
        "maxHeight": "150px"
      }
    }

  },

  "toggleSwitch": {
    "checked": {
      "backgroundColor": "primary",
      "borderColor": "primary",
      "switch": {
        "backgroundColor": "white",
        "borderColor": "primary"
      }
    },
    "unchecked": {
      "backgroundColor": "light-3",
      "borderColor": "light-3",
      "switch": {
        "backgroundColor": "white",
        "borderColor": "light-3"
      }
    }
  },

  "linkWithChevron": {
    "marginLeft": 8,
    "textDecoration": "underline"
  },

  "styles": {
    "root": {
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "base",
      "lineHeight": "base",
      "color": "text"
    },
    "h1": {
      "color": "heading",
      "fontFamily": "heading",
      "fontSize": ["lg", "lg", "xxl"],
      "fontWeight": "bold",
      "margin": 0,
      "mb": "sm"
    },
    "h2": {
      "color": "heading",
      "fontFamily": "heading",
      "fontSize": ["lg", "lg", "xl"],
      "fontWeight": "light",
      "mb": "base"
    },
    "h3": {
      "margin": 0,
      "fontFamily": "heading",
      "fontSize": "lg",
      "fontWeight": "light",
      "color": "brand",
      "mb": "xxs",
      "p": 0
    },
    "h4": {
      "color": "heading",
      "fontFamily": "heading",
      "fontSize": "md",
      "fontWeight": "light",
      "pb": "base"
    },
    "a": {
      "color": "link",
      "stroke": "link",
      "transition": "all 0.1s ease",
      ":visited": {
        "color": "link",
        "stroke": "link"
      },
      ":hover": {
        "color": "brand",
        "stroke": "brand"
      },
      "> *": {
        "transition": "all 0.1s ease"
      },
      "dark": {
        "color": "light-1",
        "stroke": "light-1",
        ":visited": { "color": "light-1", "stroke": "light-1" },
        ":hover": { "color": "accent-1", "stroke": "accent-1" }
      }
    }
  }
}
