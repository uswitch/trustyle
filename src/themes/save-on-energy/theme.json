{
  "name": "saveOnEnergy",

  "useLocalStorage": false,

  "breakpoints": ["768px", "1280px"],

  "fonts": {
    "base": "Montserrat, sans-serif",
    "link": "Montserrat, sans-serif",
    "body": "Montserrat, sans-serif",
    "heading": "Montserrat, sans-serif",
    "monospace": "Menlo, monospace"
  },

  "lineHeights": {
    "base": "26px",
    "sm": "16px",
    "md": "26px"
  },

  "fontSizes": {
    "base": 16,
    "xxs": 12,
    "xs": 14,
    "sm": 20,
    "md": 24,
    "lg": 32,
    "xl": 42,
    "xxl": 52
  },

  "fontWeights": {
    "base": 400,
    "light": 300,
    "bold": 600
  },

  "space": {
    "base": 16,
    "xxs": 8,
    "xs": 12,
    "sm": 16,
    "md": 24,
    "lg": 36,
    "xl": 56,
    "xxl": 64
  },

  "sizes": {
    "grid": {
      "lg-docs": "// 84 + 16 gutter up to 12 columns",
      "lg": {
        "1": 82,
        "2": 180,
        "3": 278,
        "4": 376,
        "5": 474,
        "6": 572,
        "7": 670,
        "8": 768,
        "9": 866,
        "10": 964,
        "11": 1062,
        "12": 1160
      },
      "md-docs": "// 64 + 16 gutter up to 12 columns",
      "md": {
        "1": 64,
        "2": 144,
        "3": 224,
        "4": 304,
        "5": 384,
        "6": 464,
        "7": 544,
        "8": 624,
        "9": 704,
        "10": 784,
        "11": 864,
        "12": 944
      },
      "sm-docs": "// 58 + 16 gutter up to 12 columns",
      "sm": {
        "1": 58,
        "2": 132,
        "3": 206,
        "4": 280
      }
    },
    "hero": { "width": 1280 },
    "label": { "width": 280 },
    "input": { "height": 58 },
    "button": { "width": 264 },
    "footer": { "width": 576 }
  },

  "useCustomProperties": false,

  "useBodyStyles": false,

  "colors": {
    "primary": "#446db5",
    "secondary": "#00aa4e",
    "heading": "#443160",
    "link": "#009fbb",
    "brand": "#443160",
    "accent-1": "#00aa4e",
    "accent-2": "#6abd45",
    "accent-3": "#00b9d9",
    "text": "#000000",
    "dark-1": "#000000",
    "dark-2": "#3d3d3d",
    "light-1": "#ffffff",
    "light-2": "#f9f9f9",
    "light-3": "#e6e6e6",
    "hero": "rgba(212, 242, 255, 0.8)",
    "hero-solid": "D4F2F1",
    "frozen-bg": "#F6F6F6",
    "battleshipGrey": "#65717B",
    "veryLightGrey": "#E9EBED"
  },

  "radii": {
    "sm": 3,
    "lg": 16,
    "xl": 30
  },

  "srOnly": {
    "position": "absolute",
    "width": 1,
    "height": 1,
    "padding": 0,
    "margin": -1,
    "overflow": "hidden",
    "clip": "rect(0, 0, 0, 0)",
    "border": 0
  },



  "styles": {
    "root": {
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "base",
      "lineHeight": "base",
      "color": "text"
    },
    "h1": {
      "color": "heading",
      "fontFamily": "heading",
      "fontSize": ["lg", "lg", "xxl"],
      "fontWeight": "bold",
      "margin": 0,
      "mb": "sm"
    },
    "h2": {
      "color": "heading",
      "fontFamily": "heading",
      "fontSize": ["lg", "lg", "xl"],
      "fontWeight": "light",
      "mb": "base"
    },
    "h3": {
      "margin": 0,
      "fontFamily": "heading",
      "fontSize": "lg",
      "fontWeight": "light",
      "color": "brand",
      "mb": "xxs",
      "p": 0
    },
    "h4": {
      "color": "heading",
      "fontFamily": "heading",
      "fontSize": "md",
      "fontWeight": "light",
      "pb": "base"
    },
    "a": {
      "color": "link",
      "stroke": "link",
      "transition": "all 0.1s ease",
      ":visited": {
        "color": "link",
        "stroke": "link"
      },
      ":hover": {
        "color": "brand",
        "stroke": "brand"
      },
      "> *": {
        "transition": "all 0.1s ease"
      },
      "dark": {
        "color": "light-1",
        "stroke": "light-1",
        ":visited": { "color": "light-1", "stroke": "light-1" },
        ":hover": { "color": "accent-1", "stroke": "accent-1" }
      }
    }
  },

  "----------------------------- Variants": "-----------------------------",

  "elements": {
    "link-with-chevron": {
      "marginLeft": 8,
      "textDecoration": "underline"
    },
    
    "input": {
      "base": {
        "fontFamily": "base",
        "fontSize": "base",
        "lineHeight": 1.33,
        "color": "text",
        "borderRadius": "4px",
        "appearance": "none",
        "border": "none",
        "background": "none",
        "boxSizing": "border-box",
        "display": "flex",
        "flex": 1,
        "position": "relative",
        "verticalAlign": "middle",
        "width": "100%",
        "&:focus": {
          "outline": "none"
        },
        "&:disabled": {
          "outline": "none",
          "border": "none",
          "color": "battleshipGrey",
          "backgroundColor": "veryLightGrey"
        }
      },
      "wrapper": {
        "backgroundColor": "white",
        "boxSizing": "border-box",
        "display": "flex",
        "position": "relative",
        "borderRadius": "3px"
      },
      "frozen": {
        "base": {
          "backgroundColor": "frozen-bg",
          "borderRadius": "3px"
        },
        "button": {
          "background": "none",
          "border": "none",
          "height": "28px",
          "padding": "0 24px",
          "width": "69px",
          "cursor": "pointer",
          ":focus": {
            "outline": "2px solid",
            "outlineColor": "#008fe9"
          },
          "&::-moz-focus-inner": { "border": 0 }
        },
        "hidden": {
          "display": "none"
        }
      },
      "affix": {
        "base": {
          "fontFamily": "base",
          "fontSize": "base",
          "lineHeight": "base",
          "textAlign": "center",
          "boxSizing": "border-box",
          "alignItems": "center",
          "display": "flex" 
        },
        "prefix": {
          "variant": "elements.input.affix.base",
          "borderRightStyle": "solid",
          "borderRightWidth": 1
        },
        "suffix": {
          "variant": "elements.input.affix.base",
          "borderLeftStyle": "solid",
          "borderLeftWidth": 1
        }
      }
    },

    "input-alert": {
      "fontFamily": "base",
      "fontSize": "base",
      "lineHeight": 1.38,
      "color": "white",
      "padding": 12,
      "position": "relative",
      "borderRadius": "sm",
      "notificationColor": "#65717B",
      "alertColor": "#DB1818",
      "before": {
        "position": "absolute",
        "content": "''",
        "width": 0,
        "height": 0,
        "borderBottomStyle": "solid"
      }
    },
  
    "logo-collection": {
      "base": {
        "mr": "16px",
        "img": {
          "maxWidth": "250px",
          "maxHeight": "150px"
        }
      }
    },

    "toggle-switch": {
      "base": {
        "checked": {
          "backgroundColor": "primary",
          "borderColor": "primary",
          "switch": {
            "backgroundColor": "white",
            "borderColor": "primary"
          }
        },
        "unchecked": {
          "backgroundColor": "light-3",
          "borderColor": "light-3",
          "switch": {
            "backgroundColor": "white",
            "borderColor": "light-3"
          }
        }
      },
      "variants": {
        "compact": {
          "checked": {
            "switch": {
              "backgroundColor": "primary",
              "borderColor": "primary"
            }
          },
          "unchecked": {
            "switch": {
              "backgroundColor": "light-3",
              "borderColor": "light-3"
            }
          }
        }
      }
    },
    
    "buttons": {
      "variants": {
        "primary": {
          "color": "light-1",
          "border": "none",
          "borderRadius": "sm",
          "backgroundColor": "primary",
          "backgroundImage": "url(/uk/static/images/rarr.svg)",
          "backgroundRepeat": "no-repeat",
          "backgroundPosition": ["95% center", "90% center", "90% center"],
          "backgroundSize": ["auto", "auto", "13%"],
          "width": ["100%", "grid.md.3", "grid.lg.2"]
        },
        "secondary": {
          "color": "light-1",
          "backgroundColor": "secondary"
        }
      }
    },
    
    "hero": {
      "sm": {
        "py": 34
      },
      "md": {
        "py": 56
      },
      "lg": {
        "py": 82
      }
    }
  },

  "compounds": {
    "card": {
      "base": {
        "display": "inline-flex !important",
        "flexDirection": ["column", "row"],
        "img": {
          "width": ["100%", "grid.md.6", "grid.md.5"]
        },
        "content": {
          "paddingY": ["sm", 0],
          "paddingX": [0, "sm"]
        }
      },
      "variants": {
        "vertical": {
          "variant": "compounds.card.base",
          "content": {
            "variant": "compounds.card.base.content"
          },
          "link": {
            "variant": "compounds.card.base.link"
          }
        },
        "horizontal": {
          "variant": "compounds.card.base",
          "display": "flex",
          "alignItems": "start",
          "image": {
            "width": 474,
            "mr": 32
          },

          "content": {
            "width": 670,
            "variant": "compounds.card.base.content"
          },
          "link": {
            "variant": "compounds.card.base.link"
          }
        }
      }
    },

    "click-out-form": {
      "flexDirection": ["column", "row", "row"],
      "width": "100%"
    }
  },

  "modules": {
    "image-callout-content": {
      "sm": { "pt": "xl" },
      "lg": { "pt": "xl" }
    },
  
    "image-callout": {
      "imageSize": { "height": 337, "width": 477 },
      "sm": { "display": "flex", "width": 320, "mx": "auto" },
      "md": { "display": "flex", "width": 768, "mx": "auto" },
      "lg": {
        "display": "flex",
        "justifyContent": "space-between",
        "width": 1280,
        "px": 158,
        "mx": "auto"
      },
      "right": { "flexDirection": "row-reverse", "alignItems": "flex-start" },
      "left": { "flexDirection": "row", "alignItems": "flex-start" },
      "column": { "flexDirection": "column", "alignItems": "center" }
    }
  },

  "layout": {
    "container": {
      "sm": { "px": 20 },
      "md": { "px": 72 },
      "lg": { "px": 64, "width": 1280, "mx": "auto" },
      "content": { "width": 1280, "px": 158, "mx": "auto" },
      "hero": { "width": 1280, "mx": "auto", "px": 60 }
    }
  }
}
