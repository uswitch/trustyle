{
  "name": "Money",

  "breakpoints": [ "768px", "990px" ],

  "zIndices": {
    "min": 0,
    "max": 100
  },

  "shadows": {
    "box": "2px 2px 25px #0004"
  },

  "fonts": {
    "base": "'Open Sans', -apple-system, sans-serif",
    "heading": "Nunito, -apple-system, sans-serif",
    "monospace": "Menlo, monospace"
  },

  "lineHeights": {
    "base": "1.4",
    "heading": "1.2"
  },

  "fontSizes": {
    "base": 16,
    "xxs": 12,
    "xs": 14,
    "sm": 16,
    "md": 18,
    "lg": 20,
    "xl": 24,
    "xxl": 32
  },

  "fontWeights": {
    "base": 400,
    "light": 300,
    "bold": 600
  },

  "space": {
    "base": 16,
    "xxs": 8,
    "xs": 12,
    "sm": 16,
    "md": 24,
    "lg": 36,
    "xl": 56,
    "xxl": 64
  },

  "sizes": {
    "grid": {
      "lg-docs": "// 84 + 16 gutter up to 12 columns",
      "lg": {
        "1": 82,
        "2": 180,
        "3": 278,
        "4": 376,
        "5": 474,
        "6": 572,
        "7": 670,
        "8": 768,
        "9": 866,
        "10": 964,
        "11": 1062,
        "12": 1160
      },
      "md-docs": "// 64 + 16 gutter up to 12 columns",
      "md": {
        "1": 64,
        "2": 144,
        "3": 224,
        "4": 304,
        "5": 384,
        "6": 464,
        "7": 544,
        "8": 624,
        "9": 704,
        "10": 784,
        "11": 864,
        "12": 944
      },
      "sm-docs": "// 58 + 16 gutter up to 12 columns",
      "sm": {
        "1": 58,
        "2": 132,
        "3": 206,
        "4": 280
      }
    },
    "hero": { "width": 1280 },
    "label": { "width": 280 },
    "input": { "height": 58 },
    "button": { "width": 264 },
    "footer": { "width": 576 }
  },

  "useCustomProperties": false,

  "colors": {
    "cranberry": "#DB4D75",
    "cranberry--light": "#FD5081",
    "cranberry--dark": "#A00938",

    "cannon-pink": "#924A8B",
    "cannon-pink--light": "#B95CB0",
    "cannon-pink--dark": "#4B255E",

    "jaffa": "#F4793B",

    "light-1": "#ffffff",
    "light-2": "#ECECEE",
    "light-3": "#DFDFE1",

    "primary": "#d64226",
    "secondary": "#1c1f4e",
    "heading": "#2f353a",
    "link": "#008fe9",
    "link-2": "#002396",
    "brand": "#1c1f4e",
    "accent-1": "#00aa4e",
    "accent-2": "#6abd45",
    "accent-3": "#00b9d9",
    "text": "#000000",
    "dark-1": "#000000",
    "dark-2": "#3d3d3d",
    "hero": "#99e2ff"
  },

  "radii": {
    "sm": 3,
    "md": 6,
    "lg": 16,
    "xl": 30
  },

  "----------------------------- Variants": "-----------------------------",
  "modules": {

    "content-hero-module": {
      "h1": {
        "mb": "sm",
        "mt": 0,
        "pt": ["sm", "sm", "lg"]
      },

      "h4": { "fontSize": "md", "fontWeight": "normal" },

      "p": {
        "width": ["auto", "grid.md.5", "grid.lg.5"],
        "textAlign": ["left", "left", "center"],
        "my": [0, 0, "xxs"],
        "px": [0, 0, "md"],
        "display": ["inline", "inline", "block"]
      },

      "a": {
        "fontSize": ["base", "base", "lg"],
        "textDecoration": "underline"
      },


      "content": {
        "display": "flex",
        "alignItems": "flex-end",

        "modules": {
          "width": ["100%", "50%", "50%"],
          "mb": "lg"
        },

        "image": {
          "height": [0, 0, 320],
          "width": [0, 0, "50%"],
          "mx": "auto",
          "backgroundSize": 500,
          "backgroundPosition": "bottom"
        }
      }
    }

  },

  "compounds": {

    "card": {
      "display": "flex",
      "width": ["100%", "49%", "grid.lg.3"],
      "flexDirection": "column",
      "borderRadius": "sm",
      "borderStyle": "solid",
      "borderColor": "dark-2",
      "borderWidth": "1px",
      "mb": "sm",
      "img": {
        "sm": { "width": "100%", "height": 230 },
        "md": { "width": "100%", "height": 230 },
        "lg": { "maxWidth": "grid.lg.3", "height": 230 }
      },
      "p": { "fontSize": 14 },
      "h4": { "fontSize": 18, "minHeight": 0 },
      "content": {
        "height": "100%",
        "p": "sm",
        "a": {
          "pb": "xs"
        }
      }
    },

    "click-out-form": {
      "flexDirection": "column",
      "width": ["auto", "grid.md.5", "grid.lg.5"],
      "backgroundColor": "light-1",
      "p": ["sm", "sm", "lg"],
      "borderRadius": [0, "md", "md"],
      "mx": [-20, 0],
      "& input, & button": {
        "fontSize": "md",
        "width": "100%"
      },
      "& button": {
        "textAlign": "center"
      }
    },

    "breadcrumb": {
      "my": "sm",
      "mx": 0
    }

  },

  "container": {
    "sm": { "px": 20 },
    "md": { "px": 72 },
    "lg": { "maxWidth": 1280, "mx": "auto", "px": "md" },
    "content": {
      "maxWidth": 1280,
      "mx": "auto",
      "px": "md",
      "contentStyle": {
        "width": ["100%", "grid.lg.8"]
      }
    },
    "hero": { "maxWidth": 1280, "mx": "auto", "px": 60 }
  },

  "hero": {
    "sm": { "minHeight": 360, "pb": 34 },
    "md": { "minHeight": 280, "pb": 56 },
    "lg": { "minHeight": 438, "pb": 82 }
  },

  "imageCalloutContent": {
    "sm": { "pt": "xl" },
    "lg": { "pt": "xl" }
  },

  "imageCallout": {
    "imageSize": { "height": 337, "width": 477 },
    "sm": { "display": "flex", "width": 320, "mx": "auto" },
    "md": { "display": "flex", "width": 768, "mx": "auto" },
    "lg": {
      "display": "flex",
      "justifyContent": "space-between",
      "width": 1280,
      "px": 158,
      "mx": "auto"
    },
    "right": { "flexDirection": "row-reverse", "alignItems": "flex-start" },
    "left": { "flexDirection": "row", "alignItems": "flex-start" },
    "column": { "flexDirection": "column", "alignItems": "center" }
  },

  "card": {

    "sm": {
      "image": { "width": "100%", "height": "auto" }
    },

    "lg": {
      "image": { "width": 278, "height": 230 }
    }

  },

  "buttons": {

    "primary": {
      "color": "light-1",
      "fontSize": "md",
      "border": "none",
      "backgroundColor": "cranberry",
      "borderRadius": "50vh",
      "paddingX": "lg",
      ":hover:not(:disabled)": {
        "backgroundColor": "cranberry--light"
      },
      ":focus": {
        "backgroundColor": "cranberry--light"
      },
      ":disabled": {
        "opacity": "0.3",
        "cursor": "not-allowed"
      },
      ":active": {
        "backgroundColor": "cranberry--dark"
      }
    },

    "secondary": {
      "color": "light-1",
      "fontSize": "md",
      "backgroundColor": "cannon-pink",
      "borderRadius": "50vh",
      "paddingX": "lg",
      ":hover:not(:disabled)": {
        "backgroundColor": "cannon-pink--light"
      },
      ":focus": {
        "backgroundColor": "cannon-pink--light"
      },
      ":disabled": {
        "opacity": "0.3",
        "cursor": "not-allowed"
      },
      ":active": {
        "backgroundColor": "cannon-pink--dark"
      }
    }

  },

  "list": {
    "bullet": {
      "color": "jaffa"
    },
    "numeric": {
      "color": "jaffa"
    }
  },

  "callOut": {
    "main": {
      "backgroundColor": "light-2",
      "paddingX": ["sm", "md"]
    },
    "icon": {
      "backgroundColor": "cannon-pink"
    }
  },

  "cta": {
    "main": {
      "textAlign": "center",
      "borderTopWidth": 1,
      "borderTopStyle": "solid",
      "borderTopColor": "light-3"
    },
    "button": {
      "variant": "secondary"
    }
  },

  "pagination": {
    "arrow": {
      "color": "dark-1"
    },
    "arrowDisabled": {
      "opacity": 0.5
    },
    "currentPage": {
      "color": "cannon-pink",
      "fontSize": "sm"
    },
    "nonCurrentPage": {
      "opacity": 0.5,
      "fontSize": "xs"
    }
  },

  "styles": {

    "h1": {
      "fontFamily": "heading",
      "fontSize": "xxl",
      "lineHeight": "heading",
      "fontWeight": "base",
      "mb": "base"
    },

    "h2": {
      "fontFamily": "heading",
      "fontSize": "xl",
      "lineHeight": "heading",
      "fontWeight": "base",
      "mb": "base"
    },

    "h3": {
      "fontFamily": "heading",
      "fontSize": "lg",
      "lineHeight": "heading",
      "fontWeight": "base",
      "mb": "base"
    },

    "h4": {
      "fontFamily": "heading",
      "fontSize": "md",
      "lineHeight": "heading",
      "fontWeight": "base",
      "mb": "base"
    },

    "root": {
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "base",
      "lineHeight": "base",
      "color": "text"
    },

    ".medium": {
      "fontSize": "xs"
    },

    ".small": {
      "fontSize": "xxs"
    },

    "a": {
      "color": "jaffa",
      "stroke": "jaffa",
      "textDecoration": "underline",
      "transition": "opacity 0.2s ease",
      ":hover": { "opacity": 0.8 },
      "> *": { "transition": "opacity 0.2s ease" }
    },

    "blockquote": {
      "backgroundColor": "light-2",
      "paddingX": "md",
      "paddingY": "sm",
      "marginX": 0,
      "borderLeft": "none",

      "p": {
        "paddingLeft": "sm",
        "paddingY": "xs",
        "marginY": 0,
        "borderLeft": "2px solid",
        "borderLeftColor": "cannon-pink",
        "fontWeight": "bold",

        "::before": {
          "content": "\"“\""
        },

        "::after": {
          "content": "\"“\""
        }
      }
    }

  }
}
