{
  "name": "Money",

  "breakpoints": [ "768px", "990px" ],

  "zIndices": {
    "min": 0,
    "max": 100
  },

  "shadows": {
    "box": "2px 2px 25px #0004"
  },

  "fonts": {
    "base": "'Open Sans', -apple-system, sans-serif",
    "heading": "Nunito, -apple-system, sans-serif",
    "monospace": "Menlo, monospace"
  },

  "lineHeights": {
    "base": "1.4",
    "heading": "1.2"
  },

  "fontSizes": {
    "base": 16,
    "xxs": 12,
    "xs": 14,
    "sm": 16,
    "md": 18,
    "lg": 20,
    "xl": 24,
    "xxl": 32
  },

  "fontWeights": {
    "base": 400,
    "light": 300,
    "bold": 600
  },

  "space": {
    "base": 16,
    "xxs": 8,
    "xs": 12,
    "sm": 16,
    "md": 24,
    "lg": 36,
    "xl": 56,
    "xxl": 64
  },

  "sizes": {
    "grid": {
      "lg-docs": "// 84 + 16 gutter up to 12 columns",
      "lg": {
        "1": 82,
        "2": 180,
        "3": 278,
        "4": 376,
        "5": 474,
        "6": 572,
        "7": 670,
        "8": 768,
        "9": 866,
        "10": 964,
        "11": 1062,
        "12": 1160
      },
      "md-docs": "// 64 + 16 gutter up to 12 columns",
      "md": {
        "1": 64,
        "2": 144,
        "3": 224,
        "4": 304,
        "5": 384,
        "6": 464,
        "7": 544,
        "8": 624,
        "9": 704,
        "10": 784,
        "11": 864,
        "12": 944
      },
      "sm-docs": "// 58 + 16 gutter up to 12 columns",
      "sm": {
        "1": 58,
        "2": 132,
        "3": 206,
        "4": 280
      }
    },
    "hero": { "width": 1280 },
    "label": { "width": 280 },
    "input": { "height": 58 },
    "button": { "width": 264 },
    "footer": { "width": 576 }
  },

  "useCustomProperties": false,

  "colors": {
    "cranberry": "#DB4D75",
    "cranberry--light": "#FD5081",
    "cranberry--dark": "#A00938",

    "cannon-pink": "#924A8B",
    "cannon-pink--light": "#B95CB0",
    "cannon-pink--dark": "#4B255E",

    "jaffa": "#F4793B",

    "light-1": "#ffffff",
    "light-2": "#ECECEE",
    "light-3": "#DFDFE1",

    "primary": "#d64226",
    "secondary": "#1c1f4e",
    "heading": "#2f353a",
    "link": "#008fe9",
    "link-2": "#002396",
    "brand": "#1c1f4e",
    "accent-1": "#00aa4e",
    "accent-2": "#6abd45",
    "accent-3": "#00b9d9",
    "text": "#000000",
    "dark-1": "#000000",
    "dark-2": "#3d3d3d",
    "hero": "#99e2ff",

    "grey-05": "#F7F7F7",
    "grey-20": "#DFDFE1",
    "grey-30": "#C2C4C8",
    "grey-60": "#6F7175",
    "grey-80": "#24262A",

    "experimental-text": "#29335C"
  },

  "radii": {
    "sm": 3,
    "md": 6,
    "lg": 16,
    "xl": 30
  },

  "----------------------------- Variants": "-----------------------------",

  
  "accordion": {
    "button": {
      "padding": "sm",
      "bg": ["grey-05", "transparent"],
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "bold",
      "color": "textColor",
      "alignItems": "center",
      "borderWidth": "0 0 1px 0",
      "borderStyle": "solid",
      "borderColor": "grey-20"
    },
    "caret": {
      "color": "cannon-pink"
    },

    "isActive": {
      "caret": {
        "color": "cranberry"
      }
    }
  },

  "sideNav": {
    "internalLink": {
      "color": "grey-60",
      "padding": "5px 0 5px 35px",
      "after": {
        "content":"\"\"",
        "position":"absolute",
        "top":"50%",
        "transform":"translateY(-50%)",
        "display":"block",
        "width":12,
        "height":12,
        "left":6,
        "borderRadius":12,
        "backgroundColor":"white",
        "borderWidth":2,
        "borderStyle":"solid",
        "borderColor": "grey-30"
      },
      "before": {
        "content":"\"\"",
        "position":"absolute",
        "left": 13,
        "width": 2,
        "backgroundColor": "grey-30"
      }
    },
    "activeInternalLink": {
      "color": "experimental-text",
      "after": {
        "borderColor": "cranberry"
      },
      "before": {}
    }
  },


  "container": {
    "sm": { "px": 20 },
    "md": { "px": 72 },
    "lg": { "maxWidth": 1280, "mx": "auto", "px": "md" },
    "content": {
      "maxWidth": 1280,
      "mx": "auto",
      "px": "md",
      "contentStyle": {
        "width": ["100%", "grid.lg.8"]
      }
    },
    "hero": { "maxWidth": 1280, "mx": "auto", "px": 60 }
  },

  "buttons": {

    "primary": {
      "color": "light-1",
      "fontSize": "md",
      "border": "none",
      "backgroundColor": "cranberry",
      "borderRadius": "50vh",
      "paddingX": "lg",
      ":hover:not(:disabled)": {
        "backgroundColor": "cranberry--light"
      },
      ":focus": {
        "backgroundColor": "cranberry--light"
      },
      ":disabled": {
        "opacity": "0.3",
        "cursor": "not-allowed"
      },
      ":active": {
        "backgroundColor": "cranberry--dark"
      }
    },

    "secondary": {
      "color": "light-1",
      "fontSize": "md",
      "backgroundColor": "cannon-pink",
      "borderRadius": "50vh",
      "paddingX": "lg",
      ":hover:not(:disabled)": {
        "backgroundColor": "cannon-pink--light"
      },
      ":focus": {
        "backgroundColor": "cannon-pink--light"
      },
      ":disabled": {
        "opacity": "0.3",
        "cursor": "not-allowed"
      },
      ":active": {
        "backgroundColor": "cannon-pink--dark"
      }
    }

  },

  "list": {
    "bullet": {
      "color": "jaffa"
    },
    "numeric": {
      "color": "jaffa"
    }
  },

  "callOut": {
    "main": {
      "backgroundColor": "light-2",
      "paddingX": ["sm", "md"]
    },
    "icon": {
      "backgroundColor": "cannon-pink"
    }
  },

  "cta": {
    "main": {
      "textAlign": "center",
      "borderTopWidth": 1,
      "borderTopStyle": "solid",
      "borderTopColor": "light-3"
    },
    "button": {
      "variant": "secondary"
    }
  },

  "styles": {

    "h1": {
      "fontFamily": "heading",
      "fontSize": "xxl",
      "lineHeight": "heading",
      "fontWeight": "base",
      "mb": "base"
    },

    "h2": {
      "fontFamily": "heading",
      "fontSize": "xl",
      "lineHeight": "heading",
      "fontWeight": "base",
      "mb": "base"
    },

    "h3": {
      "fontFamily": "heading",
      "fontSize": "lg",
      "lineHeight": "heading",
      "fontWeight": "base",
      "mb": "base"
    },

    "h4": {
      "fontFamily": "heading",
      "fontSize": "md",
      "lineHeight": "heading",
      "fontWeight": "base",
      "mb": "base"
    },

    "root": {
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "base",
      "lineHeight": "base",
      "color": "text"
    },

    ".medium": {
      "fontSize": "xs"
    },

    ".small": {
      "fontSize": "xxs"
    },

    "a": {
      "color": "jaffa",
      "stroke": "jaffa",
      "textDecoration": "underline",
      "transition": "opacity 0.2s ease",
      ":hover": { "opacity": 0.8 },
      "> *": { "transition": "opacity 0.2s ease" }
    }

  }
}
