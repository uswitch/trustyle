{
  "name": "Money",

  "breakpoints": [ "768px", "990px" ],

  "zIndices": {
    "min": 0,
    "max": 100
  },

  "shadows": {
    "box": "2px 2px 25px #0004"
  },

  "fonts": {
    "base": "'Open Sans', -apple-system, sans-serif",
    "heading": "Nunito, -apple-system, sans-serif",
    "monospace": "Menlo, monospace"
  },

  "lineHeights": {
    "base": "1.5",
    "heading": "1.2"
  },

  "fontSizes": {
    "base": 16,
    "xxs": 12,
    "xs": 14,
    "sm": 16,
    "md": 18,
    "lg": 20,
    "xl": 24,
    "xxl": 30,
    "xxxl": 36
  },

  "fontWeights": {
    "base": 400,
    "light": 300,
    "bold": 600
  },

  "space": {
    "base": 16,
    "xxs": 4,
    "xs": 8,
    "sm": 16,
    "md": 24,
    "lg": 32,
    "xl": 48,
    "xxl": 64,
    "xxxl": 96
  },

  "sizes": {
    "grid": {
      "lg-docs": "// 84 + 16 gutter up to 12 columns",
      "lg": {
        "1": 82,
        "2": 180,
        "3": 278,
        "4": 376,
        "5": 474,
        "6": 572,
        "7": 670,
        "8": 768,
        "9": 866,
        "10": 964,
        "11": 1062,
        "12": 1160
      },
      "md-docs": "// 64 + 16 gutter up to 12 columns",
      "md": {
        "1": 64,
        "2": 144,
        "3": 224,
        "4": 304,
        "5": 384,
        "6": 464,
        "7": 544,
        "8": 624,
        "9": 704,
        "10": 784,
        "11": 864,
        "12": 944
      },
      "sm-docs": "// 58 + 16 gutter up to 12 columns",
      "sm": {
        "1": 58,
        "2": 132,
        "3": 206,
        "4": 280
      }
    },
    "hero": { "width": 1280 },
    "label": { "width": 280 },
    "input": { "height": 58 },
    "button": { "width": 264 },
    "footer": { "width": 576 }
  },

  "useCustomProperties": false,

  "colors": {
    "sunshine": "#FEC340",
    "burnt": "#FAA73F",
    "jaffa": "#F4793B",
    "fuschia": "#DB4D75",
    "berry": "#A64470",
    "plum": "#924A8B",

    "grey-0": "#FFFFFF",
    "grey-05": "#F7F7F7",
    "grey-10": "#F2F2F3",
    "grey-20": "#DFDFE1",
    "grey-30": "#C2C4C8",
    "grey-40": "#ADAFB3",
    "grey-50": "#A0A2A6",
    "grey-60": "#6F7175",
    "grey-70": "#393B3F",
    "grey-80": "#24262A",
    "grey-90": "#111317",
    "grey-100": "#000000",

    "primary": "#FEC340",
    "primary--dark": "#F8B31B",
    "secondary": "#924A8B",
    "secondary--dark": "#7A3E74",

    "experimental-text": "#29335C"
  },

  "radii": {
    "sm": 3,
    "md": 6,
    "lg": 16,
    "xl": 30
  },

  "----------------------------- Variants": "-----------------------------",
  "modules": {

    "content-hero-module": {
      "h1": {
        "mb": "sm",
        "mt": 0,
        "pt": ["sm", "sm", "lg"]
      },

      "h4": { "fontSize": "md", "fontWeight": "normal" },

      "p": {
        "width": ["auto", "grid.md.5", "grid.lg.5"],
        "textAlign": ["left", "left", "center"],
        "my": [0, 0, "xxs"],
        "px": [0, 0, "md"],
        "display": ["inline", "inline", "block"]
      },

      "a": {
        "fontSize": ["base", "base", "lg"],
        "textDecoration": "underline"
      },


      "content": {
        "display": "flex",
        "alignItems": "flex-end",

        "modules": {
          "width": ["100%", "50%", "50%"],
          "mb": "lg"
        },

        "image": {
          "height": [0, 0, 320],
          "width": [0, 0, "50%"],
          "mx": "auto",
          "backgroundSize": 500,
          "backgroundPosition": "bottom"
        }
      }
    }

  },

  "accordion": {
    "button": {
      "padding": "sm",
      "bg": ["grey-05", "transparent"],
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "bold",
      "color": "textColor",
      "alignItems": "center",
      "borderWidth": "0 0 1px 0",
      "borderStyle": "solid",
      "borderColor": "grey-20"
    },
    "caret": {
      "color": "plum"
    },

    "isActive": {
      "caret": {
        "color": "fuschia"
      }
    }
  },

  "sideNav": {
    "internalLinkList": {
      "listStyle": "none",
      "paddingLeft": 0,
      "paddingTop": "xxs",
      "paddingBottom": "xxs",
      "margin": 0
    },
    "internalLinkListItem": {
      "base": {
        "padding": "8px 0 8px 35px",
        "mb": 0,
        "position": "relative",
        "::after": {
          "content":"\"\"",
          "position":"absolute",
          "top":"50%",
          "transform":"translateY(-50%)",
          "display":"block",
          "width":12,
          "height":12,
          "left":6,
          "borderRadius":12,
          "backgroundColor":"white",
          "borderWidth":2,
          "borderStyle":"solid",
          "borderColor": "grey-30"
        },
        "::before": {
          "content":"\"\"",
          "position":"absolute",
          "left": 13,
          "width": 2,
          "backgroundColor": "grey-30",
          "top": "0",
          "height": "100%"
        },
        ":first-child::before": {
          "top": "50%",
          "height": "50%"
        },
        ":last-child::before": {
          "height": "50%"
        },
        ">a": {
          "color": "grey-60",
          "textDecoration": "none",
          "fontSize": "xs",
          ":visited": {
            "color": "grey-60"
          }
        }
      },
      "isActive": {
        "variant": "sideNav.internalLinkListItem.base",
        "color": "experimental-text",
        "::after": {
          "variant": "sideNav.internalLinkListItem.base.::after",
          "borderColor": "fuschia"
        },
        ">a": {
          "variant": "sideNav.internalLinkListItem.base.>a",
          "color": "experimental-text",
          "fontWeight": "bold",
          ":visited": {
            "color": "experimental-text"
          }
        }
      }
    },
    "additionalLink": {
      "display": "block",
      "color": "grey-80",
      "paddingTop": "xs",
      "paddingBottom": "xs",
      "paddingLeft": "xs",
      "textDecoration": "none",
      "borderWidth": "0 0 1px 0",
      "borderStyle": "solid",
      "borderColor": "grey-20",
      "fontSize": "xs"
    }
  },

  "compounds": {

    "card": {
      "display": "flex",
      "width": ["100%", "49%", "grid.lg.3"],
      "flexDirection": "column",
      "borderRadius": "sm",
      "borderStyle": "solid",
      "borderColor": "grey-70",
      "borderWidth": "1px",
      "mb": "sm",
      "img": {
        "sm": { "width": "100%", "height": 230 },
        "md": { "width": "100%", "height": 230 },
        "lg": { "maxWidth": "grid.lg.3", "height": 230 }
      },
      "p": { "fontSize": 14 },
      "h4": { "fontSize": 18, "minHeight": 0 },
      "content": {
        "height": "100%",
        "p": "sm",
        "a": {
          "pb": "xs"
        }
      }
    },

    "click-out-form": {
      "flexDirection": "column",
      "width": ["auto", "grid.md.5", "grid.lg.5"],
      "backgroundColor": "grey-0",
      "p": ["sm", "sm", "lg"],
      "borderRadius": [0, "md", "md"],
      "mx": [-20, 0],
      "& input, & button": {
        "fontSize": "md",
        "width": "100%"
      },
      "& button": {
        "textAlign": "center"
      }
    },

    "breadcrumb": {
      "my": "sm",
      "mx": 0
    }

  },

  "container": {
    "sm": { "px": 20 },
    "md": { "px": 72 },
    "lg": { "maxWidth": 1280, "mx": "auto", "px": "md" },
    "content": {
      "maxWidth": 1280,
      "mx": "auto",
      "px": "md",
      "contentStyle": {
        "width": ["100%", "grid.lg.8"]
      }
    },
    "hero": { "maxWidth": 1280, "mx": "auto", "px": 60 }
  },

  "hero": {
    "sm": { "minHeight": 360, "pb": 34 },
    "md": { "minHeight": 280, "pb": 56 },
    "lg": { "minHeight": 438, "pb": 82 }
  },

  "imageCalloutContent": {
    "sm": { "pt": "xl" },
    "lg": { "pt": "xl" }
  },

  "imageCallout": {
    "imageSize": { "height": 337, "width": 477 },
    "sm": { "display": "flex", "width": 320, "mx": "auto" },
    "md": { "display": "flex", "width": 768, "mx": "auto" },
    "lg": {
      "display": "flex",
      "justifyContent": "space-between",
      "width": 1280,
      "px": 158,
      "mx": "auto"
    },
    "right": { "flexDirection": "row-reverse", "alignItems": "flex-start" },
    "left": { "flexDirection": "row", "alignItems": "flex-start" },
    "column": { "flexDirection": "column", "alignItems": "center" }
  },

  "card": {

    "sm": {
      "image": { "width": "100%", "height": "auto" }
    },

    "lg": {
      "image": { "width": 278, "height": 230 }
    }

  },

  "buttons": {

    "primary": {
      "color": "experimental-text",
      "fontSize": "md",
      "fontWeight": "bold",
      "border": "none",
      "backgroundColor": "primary",
      "borderRadius": "50vh",
      "paddingX": "lg",
      ":hover:not(:disabled)": {
        "backgroundColor": "primary--dark"
      },
      ":focus": {
        "backgroundColor": "primary--dark"
      },
      ":disabled": {
        "opacity": "0.3",
        "cursor": "not-allowed"
      },
      ":active": {
        "backgroundColor": "primary--dark"
      }
    },

    "secondary": {
      "color": "grey-0",
      "fontSize": "md",
      "fontWeight": "bold",
      "backgroundColor": "secondary",
      "borderRadius": "50vh",
      "paddingX": "lg",
      ":hover:not(:disabled)": {
        "backgroundColor": "secondary--dark"
      },
      ":focus": {
        "backgroundColor": "secondary--dark"
      },
      ":disabled": {
        "opacity": "0.3",
        "cursor": "not-allowed"
      },
      ":active": {
        "backgroundColor": "secondary--dark"
      }
    }

  },

  "list": {
    "bullet": {
      "color": "jaffa"
    },
    "numeric": {
      "color": "jaffa"
    }
  },

  "callOut": {
    "main": {
      "backgroundColor": "grey-10",
      "paddingX": ["sm", "md"]
    },
    "icon": {
      "backgroundColor": "plum"
    }
  },

  "cta": {
    "main": {
      "textAlign": "center",
      "backgroundColor": "grey-10"
    },
    "button": {
      "variant": "secondary"
    }
  },

  "pagination": {
    "arrow": {
      "color": "grey-100"
    },
    "arrowDisabled": {
      "opacity": 0.5
    },
    "currentPage": {
      "color": "plum",
      "fontSize": "sm"
    },
    "nonCurrentPage": {
      "opacity": 0.5,
      "fontSize": "xs"
    }
  },

  "categoryTitle": {
    "main": {
      "background": "linear-gradient(90deg, #924A8B 0.42%, #DB4D75 116.16%)"
    },
    "heading": {
      "color": "grey-0"
    },
    "text": {
      "color": "grey-0"
    }
  },

  "breadcrumbs": {
    "main": {
      "color": "grey-60"
    },
    "homeIcon": {
      "color": "grey-60"
    },
    "title": {
      "color": "grey-100"
    }
  },

  "styles": {

    "h1": {
      "fontFamily": "heading",
      "fontSize": "xxxl",
      "lineHeight": "heading",
      "fontWeight": "base",
      "marginY": "md"
    },

    "h2": {
      "variant": "styles.h1",
      "fontSize": "xxl"
    },

    "h3": {
      "variant": "styles.h1",
      "fontSize": "xl"
    },

    "h4": {
      "variant": "styles.h1",
      "fontSize": "lg",
      "marginY": "sm"
    },

    "h5": {
      "variant": "styles.h1",
      "fontSize": "md",
      "marginY": "sm"
    },

    "h6": {
      "variant": "styles.h1",
      "fontSize": "sm",
      "marginY": "sm"
    },

    "root": {
      "fontFamily": "base",
      "fontSize": "base",
      "fontWeight": "base",
      "lineHeight": "base",
      "color": "grey-100"
    },

    "a": {
      "color": "inherit",
      "stroke": "currentColor",
      "textDecoration": "underline",
      "transition": "opacity 0.2s ease",
      ":hover": { "opacity": 0.8 }
    },

    "blockquote": {
      "backgroundColor": "grey-10",
      "paddingX": "md",
      "paddingY": "sm",
      "marginX": 0,
      "borderLeft": "none",

      "p": {
        "paddingLeft": "sm",
        "paddingY": "xs",
        "marginY": 0,
        "borderLeft": "2px solid",
        "borderLeftColor": "plum",
        "fontWeight": "bold",

        "::before": {
          "content": "\"“\""
        },

        "::after": {
          "content": "\"“\""
        }
      }
    }

  }
}
